---
import styles from "./style.module.scss";
import Layout from '../layouts/Layout.astro';
import BackgroundIMG from '@components/__preact/backgroundImg';
import ExploreButton from "@components/exploreBtn";
---

<Layout>
	<BackgroundIMG variant="home" />
	<article class={styles.homeContainer}>
		<section class={styles.content}>
			<p class="text-preset-5">SO, YOU WANT TO TRAVEL TO</p>
			<h1 class="text-preset-1">SPACE</h1>
			<p class="text-preset-9">Let's face it; if you want to go to space, you might as well genuinely go to outer space and not hover kind of on the edge of it. Well sit back, and relax because we'll give you a truly out of this world experience!</p>
		</section>
		<section class={styles.exploreCTA}>
			<ExploreButton />
		</section>
	</article>
</Layout>
