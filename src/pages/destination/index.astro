---
import styles from "./style.module.scss";
import { getCollection } from 'astro:content';
import BackgroundIMG from '@components/__preact/backgroundImg';
import Layout from '../../layouts/Layout.astro';
import DestinationsGallery from "@components/__preact/destinations";

const data = await getCollection("data");
const destinations = data.find(item => item.id === "destinations")?.data;
---

<Layout>
	<BackgroundIMG variant="destination" />
	<article class={styles.destinationContainer}>
		<h1 class="text-preset-6">
			<b>01</b>
			PICK YOUR DESTINATION
		</h1>

		<DestinationsGallery data={destinations} client:load />
	</article>
</Layout>